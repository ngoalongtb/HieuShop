@model List<EFCore.DB.Menu>
           <script type="text/javascript">
               $(document).ready(function () {
                   $(".top-menu").hover(function () {
                       $("#Content_Skype").show();
                   }, function () {
                       $("#Content_Skype").hide();
                   });
               });
           </script>
<div class="call">
    <marquee><p><span>Trung tâm hỗ trợ?</span> liên hệ: <span class="number">1-22-3456789</span></p></marquee>
</div>
<div class="account_desc">
    @{
        var session = (DoAn.Models.UserLogin)Session[EFCore.common.CommonConstants.USER_SESSION];
    }
    @if (session == null)
    {
        <ul>
            @foreach (var item in Model)
            {
                <li class="top-menu"><img src="~/assets/Client/images/icon_Skype.png">@item.Text</li>
            }

        </ul>
    <div id="Content_Skype" >
        <div class="Tear_Skype">
            <div class="Left_Tear_Skype">
                <span class="Func">
                    Mrs.Trang:
                </span>
            </div>
                <div class="Right_Tear_Skype">
                    <a href="Skype:vvtcntt?chat"><img class="imgSkyper" src="~/assets/Client/images/skype-icon.png"></a>
                    </div>
                
            </div>
        <div class="Tear_Skype">
            <div class="Left_Tear_Skype">
                <span class="Func">
                    Mrs.Tuấn:
                </span>
            </div>
                <div class="Right_Tear_Skype">
                    <a href="Skype:vvtcntt?chat"><img class="imgSkyper" src="~/assets/Client/images/skype-icon.png"></a>
                </div>
           
        </div>
        <div class="Note"><p> Hệ thống hỗ trợ khách hàng từ 8h đến 22h tất cả các ngày trong tuần.</p></div>
        </div>
    }
    else
    {
        <ul>
            <li>Xin chào:@session.UserName</li>
            <li>@Html.ActionLink("Thoát", "Logout", "User")</li>
        </ul>
    }

</div>
<div class="clear"></div>
